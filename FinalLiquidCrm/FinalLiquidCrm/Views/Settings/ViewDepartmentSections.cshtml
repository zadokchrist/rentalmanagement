
@{
    ViewBag.Title = "ViewDepartmentSections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Sections</h4>
            <form method="post">
                <div class="col-sm-9">
                    <a href="~/Settings/UserSection" class="btn btn-primary">Add User Section</a>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                                <tr>
                                    <th>Section Name</th>
                                    <th>Department Name</th>
                                    <th>RecordDate</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.UserSections != null)
                                {
                                    foreach (var department in ViewBag.UserSections)
                                    {
                                        <tr>
                                            <td>@department.SectionName</td>
                                            <td>@department.DepartmentId</td>
                                            <td>@department.RecordDate</td>
                                            <td>
                                                <a href="~/Settings/EditUserSection?sectionid=@department.SectionId" class="btn btn-outline-primary">Edit</a>
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Error");
            container.attr("style", "color: red;text-align: center;;"); //add a style attribute
            };
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Message");
            container.attr("style", "color: green;text-align: center;;"); //add a style attribute
            };
    </script>
}
