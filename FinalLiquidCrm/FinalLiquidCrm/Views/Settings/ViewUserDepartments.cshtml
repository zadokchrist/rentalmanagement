
@{
    ViewBag.Title = "ViewUserDepartments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Departments</h4>
            <form method="post">
                <div class="col-sm-9">
                    <a href="~/Settings/CreateDepartment" class="btn btn-primary">Add User Department</a>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                                <tr>
                                    <th>Department Name</th>
                                    <th>Department Email</th>
                                    <th>Status</th>
                                    <th>RecordDate</th>
                                    <th>Recorded By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.UserDepartments != null)
                                {
                                    foreach (var department in ViewBag.UserDepartments)
                                    {
                                <tr>
                                    <td>@department.DepartmentName</td>
                                    <td>@department.Departmentemail</td>
                                    <td>
                                        @if (department.Status.Equals("True"))
                                        {
                                            <label class="badge badge-success">Active</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-danger">DEACTIVATED</label>
                                        }
                                    </td>

                                    <td>@department.RecordDate</td>
                                    <td>@department.RecordedBy</td>
                                    <td>
                                        @if (department.Status.Equals("True"))
                                        {
                                            <a href="~/Settings/DeactivateReactivateDepartment?departmentid=@department.RecordId&status=false" class="btn btn-outline-danger">Deactivate</a>
                                        }
                                        else
                                        {
                                            <a href="~/Settings/DeactivateReactivateDepartment?departmentid=@department.RecordId&status=true" class="btn btn-outline-success">Activate</a>
                                        }
                                        <a href="~/Settings/EditUserDepartment?departmentid=@department.RecordId" class="btn btn-outline-primary">Edit</a>
                                    </td>

                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Error");
            container.attr("style", "color: red;text-align: center;;"); //add a style attribute
            };
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Message");
            container.attr("style", "color: green;text-align: center;;"); //add a style attribute
            };
    </script>
}
