
@{
    ViewBag.Title = "CustomerProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="content-wrapper">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div id="message"></div>
                    <h4 class="card-title">Customer Application</h4>
                    <form class="form-sample" method="post">
                        <p class="card-description">
                            Personal info
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">First Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="fname" value="@ViewBag.Applications[0].FirstName" disabled class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Last Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="lname" value="@ViewBag.Applications[0].LastName" disabled class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Gender</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].Gender" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Date of Birth</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].DOB" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="card-description">
                            Address
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">District</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].District" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Sub County Division</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].SubcountyDivision" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">LC1</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].LC1" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Village</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].Village" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">City</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].City" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Nationality</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].Nationality" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Parish</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].Parish" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Apartment Number</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].ApartmentNumber" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Customer Tel</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].CustomerTel" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Customer Email</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].CustomerEmail" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Id number</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@ViewBag.Applications[0].IdNumber" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Audit trail for Application Assignment</h4>
                    <p class="card-description">ApplicationId <code>@ViewBag.Appid</code></p>
                    <div class="row">
                        <div class="table-sorter-wrapper col-lg-12 table-responsive">
                            <table id="sortable-table-2" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="sortStyle">FromDepartment<i class="mdi mdi-chevron-down"></i></th>
                                        <th class="sortStyle">ToDepartment<i class="mdi mdi-chevron-down"></i></th>
                                        <th class="sortStyle">Status<i class="mdi mdi-chevron-down"></i></th>
                                        <th class="sortStyle">Reason<i class="mdi mdi-chevron-down"></i></th>
                                        <th class="sortStyle">Date Assigned<i class="mdi mdi-chevron-down"></i></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.AppAssignments !=null)
                                    {
                                        foreach (var assignment in ViewBag.AppAssignments)
                                        {
                                            <tr>
                                                <td>
                                                    @assignment.RecordId
                                                </td>
                                                <td>
                                                    @assignment.FromDepart
                                                </td>
                                                <td>
                                                    @assignment.ToDepart
                                                </td>
                                                <td>
                                                    @assignment.Status
                                                </td>
                                                <td>
                                                    @assignment.Reason
                                                </td>
                                                <td>
                                                    @assignment.RecordDate
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@if (ViewBag.Error != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Error");
            container.attr("style", "color: red;text-align: center;;"); //add a style attribute
            };
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Message");
            container.attr("style", "color: green;text-align: center;;"); //add a style attribute
            };
    </script>
}